# Quantum Profit Chain - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# üåê BLOCKCHAIN CONFIGURATION
# ===========================================

# BSC Network Configuration
REACT_APP_BSC_RPC_URL=https://bsc-dataseed.binance.org/
REACT_APP_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# Contract Addresses
REACT_APP_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
REACT_APP_CONTRACT_ADDRESS_TESTNET=0x0000000000000000000000000000000000000000

# Chain IDs
REACT_APP_CHAIN_ID=56          # BSC Mainnet
REACT_APP_TESTNET_CHAIN_ID=97  # BSC Testnet

# Default Network (mainnet/testnet)
REACT_APP_DEFAULT_NETWORK=mainnet

# ===========================================
# üîó MULTI-CHAIN SUPPORT
# ===========================================

# Ethereum
REACT_APP_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
REACT_APP_ETHEREUM_CONTRACT=0x0000000000000000000000000000000000000000
REACT_APP_ETHEREUM_CHAIN_ID=1

# Polygon
REACT_APP_POLYGON_RPC_URL=https://polygon-rpc.com/
REACT_APP_POLYGON_CONTRACT=0x0000000000000000000000000000000000000000
REACT_APP_POLYGON_CHAIN_ID=137

# Supported Networks (comma-separated)
REACT_APP_SUPPORTED_CHAINS=56,97,1,137

# ===========================================
# üéÆ GAME CONFIGURATION
# ===========================================

# Game Parameters
REACT_APP_GAME_MAX_LEVELS=8
REACT_APP_GAME_BASE_PRICE=0.1
REACT_APP_REFERRAL_BONUS_PERCENT=10
REACT_APP_MATRIX_POSITIONS_BASE=3

# Game Modes
REACT_APP_ENABLE_TESTNET=true
REACT_APP_ENABLE_DEMO_MODE=false

# ===========================================
# üé® UI CONFIGURATION
# ===========================================

# Neural Glass Theme
REACT_APP_THEME=neural-glass
REACT_APP_PARTICLE_COUNT=50
REACT_APP_ANIMATION_SPEED=1
REACT_APP_BLUR_INTENSITY=20

# Color Scheme
REACT_APP_PRIMARY_COLOR=#00ffff
REACT_APP_SECONDARY_COLOR=#8b5cf6
REACT_APP_ACCENT_COLOR=#ec4899

# ===========================================
# üîê WALLET INTEGRATION
# ===========================================

# WalletConnect
REACT_APP_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
REACT_APP_WALLETCONNECT_VERSION=2

# Supported Wallets
REACT_APP_SUPPORTED_WALLETS=metamask,walletconnect,coinbase

# ===========================================
# üì° API CONFIGURATION
# ===========================================

# Backend API
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3

# External APIs
REACT_APP_COINGECKO_API=https://api.coingecko.com/api/v3
REACT_APP_ETHERSCAN_API_KEY=your_etherscan_api_key
REACT_APP_BSCSCAN_API_KEY=your_bscscan_api_key

# ===========================================
# üõ† DEVELOPMENT SETTINGS
# ===========================================

# Debug Flags
REACT_APP_DEBUG_MODE=false
REACT_APP_ENABLE_CONSOLE_LOGS=false
REACT_APP_SHOW_GRID=false

# Feature Flags
REACT_APP_ENABLE_DEV_TOOLS=true
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_SKIP_WALLET_VALIDATION=false